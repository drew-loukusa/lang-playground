# An example class in Playground
Class Point {
    x; y;

    # Multiple constructors are allowed,
    # provide they have a different number of arguments
    def Point(){
        x = 0;
        y = 0;
    }

    def Point(x, y){
        this.x = x;
        this.y = y;
    }

    def Add(a){
        return Point(
            x + a.x,  
            y + a.y
        );
    }

    def to_str(){
        return "<Point: (" + str(x) + ", " + str(y) +")>";
    }
}